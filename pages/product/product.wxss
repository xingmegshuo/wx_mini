/* pages/product/product.wxss */

.deatil {
  margin: 5%;
}

.swiper-container{
  height: 420rpx;
}
.swiper{
  height: 410rpx;
}
.img {
  width: 100%;
  height: 400rpx;
}

.name {
  margin-top: 50rpx;
  margin-bottom: 10rpx;
  font-size:48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.price {
  width: 100%;
  font-size: 32rpx;
  color: #700600;
}

.sail {
  margin-top: 50rpx;
  width: 100%;
  font-size: 32rpx;
}
.all{
  margin-top: 50rpx;
  width: 100%;
  font-size: 32rpx;
}

.bu {
  margin-top: 100rpx;
  display: -webkit-box;
  font-size: 36rpx;
  color:#700600;
  width: 100%;
}
.title{
  width: 20%;
}
.btn{
  width: 50%;
  margin-left: 10%;
  display: -webkit-box;
  border-radius: 10rpx;
  border:solid 2rpx #e4e4e4;
  background-color: white;
  height: 80rpx;
}
.btn image{
  width: 60rpx;
  height: 60rpx;
}
.nav-text{
  margin-top: 10rpx;
  width: 40%;
  text-align: center;
}
.nav{
  margin-top: 10rpx;
  margin-left: 5%;
  width: 20%;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-content: center;
  background-color: white;
  border: solid 3rpx #e4e4e4;
  border-radius: 20%;
}


.button{
  border-radius: 10rpx;
  border-style: solid;
  border-color: #e4e4e4;
  border-width: 2rpx;
  margin-top: 80rpx;
  text-align: center;
  font-size: 42rpx;
  margin-left: 5%;
  background-color: white;
}

.price image{
  width: 15px;
  height: 20px;
}