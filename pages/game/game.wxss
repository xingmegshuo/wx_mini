/* pages/game/game.wxss */

page {
  height: 90%;
}

.header-bg {
  width: 100%;
  height: 100%;
  position: fixed;
  background-size: 100% 100%;
  z-index: -1;
  margin-top: -5%;
}
.games {
  margin: 5%;
  border-style: solid;
  box-shadow:0px 1px 1px 1px  #A9A9A9;
  border-width: 0rpx;
  /* background-color: black; */
  display: flex;
  flex-wrap: wrap;
  align-content: flex-start;
  border-radius: 10px;
  background-color: white;
}

.game {
  display: flex;
  margin-left: 3%;
  width: 22%;
  /* height: 210rpx; */
  flex-direction: column;
  /* float: left; */
  /* background-color: black; */
  display: flex;
  align-items: center;
  justify-content: center;
}

.game image {
  /* display: flex; */
  margin-top: 10%;
  width: 60px;
  height: 60px;
  border-radius: 5px;

}
.game text {
  width: 100%;
  display: flex;
  margin-top: 10%;
  font-size: 14px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.text {
  display: flex;
  font-size: 24px;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  margin-top: 50rpx;
  color: #363636;
}
.except {
  margin: 5%;
  border-style: solid;
  box-shadow:0px 2px 4px 2px goldenrod;
  border-width: 0rpx;
}
.except text {
  display: flex;
  font-size: 20px;
  font-weight: bold;
  height: 210rpx;
  align-items: center;
  justify-content: center;
}