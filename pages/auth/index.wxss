/* index.wxss */

page {
  height: 100%;
}

.header-bg {
  width: 100%;
  height: 100%;
  position: fixed;
  background-size: 100% 100%;
  z-index: -1;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 1;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  z-index: 1;
}



.userinfo-nickname {
  color: #aaa;
  z-index: 1;
}

.usermotto {
  padding-top: 200px;
  z-index: 1;
} 