/* pages/exchange/exchange.wxss */


.top{
  height: 100rpx;
}
.top-view{
  width: 200rpx;
  height: 90rpx;
  margin-left: 50rpx;
  border-radius: 20rpx;
  border-style: solid;
  border-width: 1rpx;
  border-color: #808080;
  display: -webkit-box;
}
.top image{
  margin-top: 5rpx;
  margin-left: 10rpx;
  height: 80rpx;
  width: 80rpx;
}
.top-text{
  height: 90rpx;
  width: 100rpx;
  line-height: 90rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;

}
.hr{
  height: 2rpx;
  background-color:#333333 ;
}



.mall {
  position:absolute;
  top:105rpx;
  left: 150rpx;
  height:80%;
  width: 78%;
}
.products {
  width: 95%;
  height: 95%;
  margin: 2.5% auto;
  overflow: scroll;
}
.title {
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bolder;
}
.product{
  width: 95%;
  height: 200rpx;
  margin: auto;
  border-radius: 16rpx;
  border-style: solid;
  border-color: #808080;
  margin-top: 20rpx;
  display: -webkit-box;
  box-shadow: 10rpx 10rpx 5rpx #888888;
}
.product-image{
  width: 50%;
  height: 80%;
  margin-top: 20rpx;
  margin-left:10%;
}
.product-image image{
  width: 100%;
  height: 100%;
  border-radius: 6rpx;
  overflow: hidden;
}
.product-info{
  margin-top: 20rpx;
  width: 35%;
}
.product-name {
  text-align: right;
}
.product-price{
  text-align: right;
  font-size: 24rpx;
  color: #ff0000;
}
.product-add{
  text-align: right;
  margin-top: 10rpx;
}
.product-add image{
  width: 60rpx;
  height: 60rpx;
}


.nav {
  width: 140rpx;
  position: absolute;
  left: 0rpx;
  top: 102rpx;
  z-index: 5;
}

.nav-item{
  height: 140rpx;
  border-width: 1rpx;
  border-style: solid;
  border-color: #808080;
  color: #bcbcbc;
}
.nav-image{
  margin-left: 20rpx;
  margin-top: 10rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border-width: 1rpx;
  border-style: solid;
  border-color: #808080;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}
.nav-image image{
  width: 80rpx;
  height: 80rpx;
}
.nav-text{
  height: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bolder;
}



