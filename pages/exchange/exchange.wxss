page {
  height: 100%;
}

.header-bg {
  width: 100%;
  height: 100%;
  position: fixed;
  background-size: 100% 100%;
  z-index: -1;

}

.mall {
  position: relative;
  top: 60%;
  height: 40%;
}

.first {
  position: absolute;
  margin-top: 10%;
  left: 5%;
  width: 35%;
  height: 70%;
  border-style: solid;
  box-shadow: 0px 2px 4px 2px goldenrod;
  border-width: 0rpx;
  z-index: 1;
}

.second {
  position: absolute;
  left: 37%;
  width: 45%;
  height: 72%;
  margin-left: -40px;
  border-style: solid;
  box-shadow: 0px 2px 4px 2px goldenrod;
  border-width: 0rpx;
  z-index: 999;
}

.third {
  left: 60%;
  position: absolute;
  margin-top: 10%;
  width: 35%;
  height: 70%;
  border-style: solid;
  box-shadow: 0px 2px 4px 2px goldenrod;
  border-width: 0rpx;
  z-index: 1;
}

