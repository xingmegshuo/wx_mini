.placeholder-view {
  width: 100%;
  height: 100rpx;
}

.nav {
  width: 30%;
  margin-top: -58%;
  margin-right: 2%;
  float: right;
  z-index: 5;
  background-color: #a3adf4;
  border-left: solid black 0.5px;
  border-right: solid black 0.5px;
  border-top: solid black 0.2px;
}

.nav view {
  height: 40px;
  border-bottom: solid black 0.2px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.title {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 22%;
  font-size: 20px;
  z-index: 5;
  margin-left: 2%;
  background-color: white;
}
.imageContainer {
  width: 96%;
  height: 90%;
  margin: 2%;
}
.swiper-item {
  text-align: center;	
}

.product {
  width: 96%;
  position: absolute;
  height: 70%;
  border:1px solid gold;
  margin-top: 20%;
}
.active {
  width: 96%;
  position: absolute;
  height: 70%;
  border:1px solid gold;
  margin-top: 0;
  z-index: 100;

}

.product image{
  width: 100%;
  height: 80%;
}
.product text {
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: white;
  width: 100%;
  margin-top: -4%;
  height: 20%;
}
