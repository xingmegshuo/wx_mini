/* pages/exchange/exchange.wxss */
page{
  background-color: white;
}

.top{
  height: 100rpx;
}
.top-view{
  margin-top:25rpx;
  width: 180rpx;
  height: 70rpx;
  margin-left: 50rpx;
  border-radius: 20rpx;
  border-style: solid;
  border-width: 1rpx;
  border-color: #e4e4e4;
  display: -webkit-box;
}
.top image{
  margin-top: 10rpx;
  margin-left: 10rpx;
  height: 50rpx;
  width: 50rpx;
}
.top-text{
  height: 70rpx;
  width: 100rpx;
  line-height: 70rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;

}
.hr{
  height: 5rpx;
  background-color:#e4e4e4 ;
}



.mall {
  position:absolute;
  top:105rpx;
  left: 150rpx;
  height:80%;
  width: 78%;
}
.products {
  width: 95%;
  height: 95%;
  margin: 2.5% auto;
  overflow: scroll;
}
.error{
  margin: 50rpx;
}
.title {
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bolder;
}
.product{
  width: 95%;
  height: 200rpx;
  margin: auto;
  border-radius: 10rpx;
  margin-top: 20rpx;
  display: -webkit-box;
  box-shadow:0rpx 2rpx 2rpx 2rpx #b4b4b4;
  background-color: white;
}
.product-image{
  width: 50%;
  height: 80%;
  margin-top: 20rpx;
  margin-left:10%;
}
.product-image image{
  width: 100%;
  height: 100%;
  border-radius: 6rpx;
  overflow: hidden;
}
.product-info{
  margin-top: 20rpx;
  width: 35%;
}
.product-name {
  text-align: right;
}
.product-price{
  text-align: right;
  font-size: 24rpx;
  color: #ff0000;
}
.product-add{
  text-align: right;
  margin-top: 10rpx;
}
.product-add image{
  width: 60rpx;
  height: 60rpx;
}


.nav {
  width: 140rpx;
  height: 85%;
  position: absolute;
  left: 0rpx;
  top: 126rpx;
  z-index: 5;
  background-color:#f6f6f6;
  /* box-shadow:0rpx 2rpx 2rpx 2rpx #b4b4b4; */
}

.nav-item{
  height: 110rpx;
  padding-top: 10rpx;
  /* border-width: 1rpx;
  border-style: solid;
  border-color: #808080; */
}
.nav-image{
  margin-left: 30rpx;
  width: 80rpx;
  height: 80rpx;
  /* border-radius: 50%;
  border-width: 1rpx;
  border-style: solid;
  border-color: #808080; */
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}
.nav-image image{
  width: 80rpx;
  height: 80rpx;
}
.nav-text{
  height: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bolder;
}



