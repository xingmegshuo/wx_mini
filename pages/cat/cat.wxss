/* pages/cat/cat.wxss */

page {
  height: 90%;
}

.header-bg {
  width: 100%;
  height: 100%;
  position: fixed;
  background-size: 100% 100%;
  z-index: -1;
  margin-top: -3%;
}

.title {
  display: flex;
  z-index: 1;
  font-size: 24px;
  font-weight: bolder;
  align-items: center;
  justify-content: center;
  margin-bottom: 50rpx;
}
.header {
  height: 30px;
  margin: 5%;
  background-color:whitesmoke;
  display: flex;
  flex-wrap: wrap;
  align-content: flex-start;

}
.info {
  height: 120px;
  margin: 5%;
}


.info image {
  height: 100px;
  width: 140px;
  float: left;
}
.item {
  margin-top: 12px;
  margin-left: 160px;
}
.ok { 
  width: 25%; 
  margin-top: 35px; 
  margin-left:60px;
  float:left;
  background-color: red;
  color: white;
 }
 .delete { 
  width: 25%; 
  margin-top: 35px; 
  margin-right:60px;
  float:right;
  color: white;
  background-color:orange;
 }
 .placeholder-view {
  width: 100%;
  height: 300rpx;
}