/* pages/my/my.wxss */


.main{
  width: 95%;
  margin:auto
}
.user{
  margin-top:50rpx;
  width: 100%;
  height: 200rpx;
  border-radius: 10rpx;
  border:solid 2rpx #e4e4e4;
  display: -webkit-box;
  box-shadow:0rpx 2rpx 2rpx 2rpx #b4b4b4;
}
.userinfo-avatar{
  width: 160rpx;
  height: 160rpx;
  margin:20rpx;
  border-radius: 50%;
  overflow: hidden;
}
.userinfo-avatar image{
  width: 100%;
  height: 100%;
}
.userinfo-name{
  height: 200rpx;
  line-height: 200rpx;
  font-size: 48rpx;
}
.address{
  margin-top: 20rpx;
  height: 120rpx;
  width: 100%;
  border-radius: 10rpx;
  border:solid 2rpx #e4e4e4;
  display: -webkit-box;
  box-shadow:0rpx 2rpx 2rpx 2rpx #b4b4b4;
}
.logo{
  margin:20rpx;
  width: 80rpx;
  height: 80rpx;
}
.logo image{
  width: 100%;
  height: 100%;
}
.text{
  width: 480rpx;
  height: 120rpx;
  line-height: 120rpx;
  font-size: 36rpx;
}
.orther{
  height: 120rpx;
  line-height: 120rpx;
  font-size: 32rpx;
  color:#700600;
}