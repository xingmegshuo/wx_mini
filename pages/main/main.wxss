/* pages/main/main.wxss */

page {
  height: 100%;
}

.header-bg {
  width: 100%;
  height: 100%;
  position: fixed;
  background-size: 100% 100%;
  z-index: -1;
}
.header {
  z-index: 1;
  height: 100%;
  width: 100%;
}
.title {
  display: flex;
  z-index: 1;
  font-size: 24px;
  font-weight: bolder;
  align-items: center;
  justify-content: center;
  margin-bottom: 50rpx;
}

.active {
  z-index: 1;
  margin:3%;
  width: 95%;
  height: 300rpx;
  border-style: solid;
  box-shadow:0px 2px 4px 2px goldenrod;
  border-width: 0rpx;
}
.active-img {
  margin:3%;
  width: 42%;
  height: 80%;
  float: left;
}
.active-title {
  z-index: 1;
  padding: 3%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18px;
  font-weight:bolder;
}
.active-text {
  font-size: 14px;
}
.active-time {
  margin-top: 6%;

}

.active-time text {
  font-weight: bolder;
  font-size: 14px;
}