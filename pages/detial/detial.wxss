/* pages/detial/detial.wxss */


page {
  height: 100%;
}
.header-bg {
  width: 100%;
  height: 100%;
  position: fixed;
  background-size: 100% 100%;
  z-index: -1;
  margin-top: -3%;
}
.main {
  width: 94%;
  height: 100%;
  margin: 3%;
  /* padding: 3%; */
  border-style: solid;
  box-shadow:0px 2px 4px 2px black;
  border-width: 0rpx;
  z-index: 1;
}

.title {
  display: flex;
  padding-top: 40rpx;
  z-index: 1;
  font-size: 24px;
  font-weight: bolder;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
}
.desc {
  margin-left: 20rpx;
  text-indent: 20rpx;
  text-align: left;
}
.time {
  display: flex;
  padding-top: 20rpx;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}
.time text {
  font-weight: bolder;
}

.img {
  padding-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}
.content {
  margin-left: 20rpx;
  text-indent: 20rpx;
  text-align: left;
}
